<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="meeting"
            type="com.example.projectmanagement.ui.meetings.Meeting" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{meeting.title}"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Sprint Planning" />

            <TextView
                android:id="@+id/dateTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{@string/meeting_datetime(meeting.date, meeting.time)}"
                android:textSize="14sp"
                tools:text="2024-02-01 at 10:00 AM" />

            <TextView
                android:id="@+id/participantsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{@string/meeting_participants(meeting.participants)}"
                android:textSize="14sp"
                tools:text="Participants: Team A, Team B" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>

